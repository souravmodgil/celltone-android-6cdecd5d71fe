<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mobileoid2.celltone.mediacontroller.view.FensterVideoView
        android:id="@+id/fen__play_video_texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:fitsSystemWindows="true" />


    <com.mobileoid2.celltone.mediacontroller.controller.CustomMediaPlayer
        android:id="@+id/fen__play_video_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <com.mobileoid2.celltone.mediacontroller.view.FensterLoadingView
        android:id="@+id/fen__play_video_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
