<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="-50dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.mobileoid2.celltone.CustomWidget.TextView.ProximumBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Special Permission" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.mobileoid2.celltone.CustomWidget.TextView.ProximumBoldTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="9"
                                android:text="Screen Permission" />

                            <Button
                                android:id="@+id/button_screen_premission"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="3"
                                android:background="@drawable/rectanglar_shape"
                                android:text="Set"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/txt_tick"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:textColor="@color/white"
                                android:background="@drawable/circle"
                                android:layout_marginTop="10dp"
                                android:textSize="14dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:text="✓" />

                        </LinearLayout>

                        <com.mobileoid2.celltone.CustomWidget.TextView.ProximumRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="9"
                            android:text="To show Audio and Video"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#f0f0f0"></View>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.mobileoid2.celltone.CustomWidget.TextView.ProximumBoldTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="9"
                                android:text="Call Permission" />

                            <Button
                                android:id="@+id/button_notification"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="3"
                                android:background="@drawable/rectanglar_shape"
                                android:text="Set"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/txt_tick1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:textColor="@color/white"
                                android:background="@drawable/circle"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:textSize="14dp"
                                android:visibility="gone"
                                android:text="✓" />


                        </LinearLayout>

                        <com.mobileoid2.celltone.CustomWidget.TextView.ProximumRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="9"
                            android:text="To Stop video when call is picked"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="#f0f0f0"></View>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.mobileoid2.celltone.CustomWidget.TextView.ProximumBoldTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="9"
                                android:text="Accessibility Permission" />

                            <Button
                                android:id="@+id/button_accessibility"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="3"
                                android:background="@drawable/rectanglar_shape"
                                android:text="Set"
                                android:textColor="@color/white"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/txt_tick2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:textColor="@color/white"
                                android:background="@drawable/circle"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:textSize="14dp"
                                android:visibility="gone"
                                android:text="✓" />


                        </LinearLayout>

                        <com.mobileoid2.celltone.CustomWidget.TextView.ProximumRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="9"
                            android:text="To Stop video when call is picked"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!---add your views here-->
        </LinearLayout>
    </FrameLayout>


</LinearLayout>