<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.HomeVideoFragment">




    <android.support.design.widget.AppBarLayout
        android:id="@+id/viewpagertabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            android:gravity="center"
            android:layout_gravity="center"
            app:tabTextAppearance="@style/cutomTabTexttyle"
            android:background="@color/white"
            app:tabMode="scrollable" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <com.mobileoid2.celltone.CustomWidget.TextView.OptimaItalicTextview
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center|right"
            android:gravity="right"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="@string/not_yet_register">
        </com.mobileoid2.celltone.CustomWidget.TextView.OptimaItalicTextview>

        <com.mobileoid2.celltone.CustomWidget.TextView.OptimaBoldTextview
            android:id="@+id/txt_register_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="@string/register_now"></com.mobileoid2.celltone.CustomWidget.TextView.OptimaBoldTextview>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/tut_layout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tut1"/>

        <Button
            android:id="@+id/button_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Skip"
            android:layout_marginEnd="13dp" />

    </RelativeLayout>


</LinearLayout>